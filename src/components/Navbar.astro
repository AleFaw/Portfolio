---
// src/components/Navbar.astro
const links = [
  { name: "Inicio", href: "#top" },
  { name: "Sobre mí", href: "#sobre-mi" },
  { name: "Formación", href: "#formacion" },
  { name: "Experiencia", href: "#experiencia" },
  { name: "Proyectos", href: "#proyectos" },
  { name: "Contacto", href: "#footer" },
];
---

<nav class="fixed top-0 w-full z-50 bg-slate-900/80 backdrop-blur-md border-b border-slate-700/30">
  <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
    
    <a href="#top" class="text-xl font-bold text-white hover:text-blue-400 transition-colors">
      AT<span class="text-blue-500">.</span>
    </a>

    <ul class="hidden md:flex space-x-8">
      {links.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="text-gray-300 hover:text-white hover:underline decoration-blue-500 decoration-2 underline-offset-4 transition-all"
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>

    <button class="md:hidden text-gray-300 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</nav>