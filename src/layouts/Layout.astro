---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import FloatingNav from '../components/FloatingNav.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>Alejo Tarrio | Ingeniero Mecatrónico & Full Stack Dev</title>
		<meta name="description" content="Portfolio profesional de Alejo Tarrio. Desarrollo Web, Ingeniería Mecatrónica y Diseño 3D." />

		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://alejotarrio.com.ar/" />
		<meta property="og:title" content="Alejo Tarrio | Ingeniero Mecatrónico & Full Stack Dev" />
		<meta property="og:description" content="Portfolio profesional de Alejo Tarrio. Desarrollo Web, Ingeniería Mecatrónica y Diseño 3D." />
		<meta property="og:image" content="/og-image.jpg" /> {/* <--- AQUÍ VA TU NUEVA IMAGEN */}

		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://alejotarrio.com.ar/" />
		<meta property="twitter:title" content="Alejo Tarrio | Ingeniero Mecatrónico & Full Stack Dev" />
		<meta property="twitter:description" content="Portfolio profesional de Alejo Tarrio. Desarrollo Web, Ingeniería Mecatrónica y Diseño 3D." />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		</head>
	<body class="bg-slate-900 text-white font-sans flex flex-col min-h-screen">
		<Navbar />
		
        <slot />

        <Footer />
		<FloatingNav />
		 </body>
</html>